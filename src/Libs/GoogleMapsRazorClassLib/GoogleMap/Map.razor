@namespace Seedysoft.Libs.GoogleMapsRazorClassLib.GoogleMap

@inherits SeedysoftComponentBase

<style type="text/css">
    @($"#{this.Id} {{ height: 100%; }} ")
</style>

<ScriptsLoader Async
               Defer
               Id="@($"sl{Id}")"
               OnError="@OnScriptError"
               OnLoad="@OnScriptLoad"
               ScriptId="@($"script{Id}")"
               Source="@GoogleMapsJsFileUrl" />

<div @ref="@Element" id="@Id" class="@ClassNames" style="@StyleNames" @attributes="@AdditionalAttributes">
</div>

<div class="alert d-none" id="alert">
    <p>error</p>
    <a href="#" class="close">&times;</a>
</div>
