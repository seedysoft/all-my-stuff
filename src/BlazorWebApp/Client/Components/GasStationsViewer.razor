<style>
    .mud-table-row.cursor-pointer.selected {
        background-color: #1E88E5 !important;
    }

        .mud-table-row.cursor-pointer.selected > td {
            color: white !important;
        }

            .mud-table-row.cursor-pointer.selected > td .mud-input {
                color: white !important;
            }
</style>

<MudTable @ref="@GasStationsMudTable"
          Dense
          Hover
          Items="@GasStationsMudTableItems"
          Loading="@IsLoading"
          LoadingProgressColor="@Color.Info"
          OnRowClick="@OnRowClickGasStationsMudTable"
          RowClass="cursor-pointer"
          RowClassFunc="@SelectedRowClassFunc"
          T="@Libs.GasStationPrices.ViewModels.GasStationModel">

    <HeaderContent>
        <MudTh Style=" ">Rótulo</MudTh>
        @foreach (var item in Libs.GasStationPrices.Models.Minetur.ProductoPetrolifero.All)
        {
            if (PetroleumProductsSelectedIds.Contains(item.IdProducto))
            {
                <MudTh>@item.Abreviatura</MudTh>
            }
        }
    </HeaderContent>

    <RowTemplate>
        <MudTd DataLabel="Rótulo">@context.RotuloTrimed</MudTd>
        @foreach (var item in Libs.GasStationPrices.Models.Minetur.ProductoPetrolifero.All)
        {
            if (PetroleumProductsSelectedIds.Contains(item.IdProducto))
            {
                <MudTd>@(context.Prices.SingleOrDefault(x => x.Product.IdProducto == item.IdProducto)?.Price?.ToString("0.000") ?? string.Empty)</MudTd>
            }
        }
    </RowTemplate>

    <NoRecordsContent>No data</NoRecordsContent>

    <PagerContent>
        <MudPagination Class="pa-4"
                       Count="@((GasStationsMudTable.GetFilteredItemsCount() + GasStationsMudTable.RowsPerPage - 1) / GasStationsMudTable.RowsPerPage)"
                       SelectedChanged="GasStationsMudTablePageChanged" />
    </PagerContent>

</MudTable>
